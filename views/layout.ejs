    </head>
    <!-- https://i.imgur.com/RNZzAkZ.jpg -->
    <div class="background" style="background-image:url('https://i.imgur.com/zZA7bNA.jpg');">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <a class="navbar-brand" href="/records" style="color: burlywood; font-size: large;">The Record Crate</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarToggleExternalContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="/records">Home<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/records/new">Add a New Record</a>
                        </li>
                    <% if(!loggedIn) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/sessions/signup">Sign Up</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/sessions/login">Log In</a>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/sessions/logout">Log Out</a>
                        </li>
                    <% } %>
                </div>
        </nav>
        <!-- welcome the user after login -->
            <% if(username) { %>
                <p>Welcome, <%= username %></p>
            <% } %>
            <% if (message) { %>
                <p><%= message %></p>
            <% } %> 
            <%- body %> 
